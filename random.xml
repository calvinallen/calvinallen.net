---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
{% assign random = site.time | date: "%s%N" | modulo: site.posts.size %}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name | xml_escape }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		<item>
			<title>{{ site.posts[random].title | xml_escape }}</title>
			<description>{{ site.posts[random].content | xml_escape }}</description>
			<pubDate>{{ site.posts[random].date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
			<link>{{ site.url }}{{ site.posts[random].url }}</link>
			<guid isPermaLink="true">{{ site.url }}{{ site.posts[random].url }}</guid>
		</item>
	</channel>
</rss>